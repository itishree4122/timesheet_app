<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button" /> <!-- Color for checked state -->
            <stroke
                android:width="1dp"
                android:color="#D9D3D3"/>

        </shape>
    </item>
    <!-- Unchecked state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color for unchecked state -->
            <stroke
                android:width="1dp"
                android:color="#D9D3D3"/>

        </shape>
    </item>
</selector>
